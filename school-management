        // Toggle Circular Details
        function toggleCircularDetails(circularId) {
            const details = document.getElementById(`details-${circularId}`);
            details.classList.toggle('show');
        }

        // Signature Canvas Functions
        let currentCanvas = null;
        let isDrawing = false;
        let signatureMode = 'none';

        function showSignatureCanvas(circularId) {
            document.getElementById(`canvas-area-${circularId}`).style.display = 'block';
            document.getElementById(`text-area-${circularId}`).style.display = 'none';
            
            const canvas = document.getElementById(`canvas-${circularId}`);
            setupCanvas(canvas);
            currentCanvas = canvas;
            signatureMode = 'canvas';
        }

        function showTextSignature(circularId) {
            document.getElementById(`text-area-${circularId}`).style.display = 'block';
            document.getElementById(`canvas-area-${circularId}`).style.display = 'none';
            signatureMode = 'text';
        }

        function setupCanvas(canvas) {
            const ctx = canvas.getContext('2d');
            ctx.lineWidth = 3;
            ctx.lineCap = 'round';
            ctx.lineJoin = 'round';
            ctx.strokeStyle = '#1e4d3b';
            
            // Mouse events
            canvas.addEventListener('mousedown', startDrawing);
            canvas.addEventListener('mousemove', draw);
            canvas.addEventListener('mouseup', stopDrawing);
            canvas.addEventListener('mouseout', stopDrawing);
            
            // Touch events
            canvas.addEventListener('touchstart', handleTouch);
            canvas.addEventListener('touchmove', handleTouch);
            canvas.addEventListener('touchend', stopDrawing);
        }

        function startDrawing(e) {
            isDrawing = true;
            const rect = currentCanvas.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            
            const ctx = currentCanvas.getContext('2d');
            ctx.beginPath();
            ctx.moveTo(x, y);
        }

        function draw(e) {
            if (!isDrawing) return;
            
            const rect = currentCanvas.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            
            const ctx = currentCanvas.getContext('2d');
            ctx.lineTo(x, y);
            ctx.stroke();
        }

        function stopDrawing() {
            isDrawing = false;
        }

        function handleTouch(e) {
            e.preventDefault();
            const touch = e.touches[0];
            if (!touch) return;
            
            const mouseEvent = new MouseEvent(
                e.type === 'touchstart' ? 'mousedown' : 
                e.type === 'touchmove' ? 'mousemove' : 'mouseup',
                {
                    clientX: touch.clientX,
                    clientY: touch.clientY
                }
            );
            currentCanvas.dispatchEvent(mouseEvent);
        }

        function clearSignature(circularId) {
            const canvas = document.getElementById(`canvas-${circularId}`);
            const ctx = canvas.getContext('2d');
            ctx.clearRect(0, 0, canvas.width, canvas.height);
        }

        // Submit Signature
        function submitSignature(circularId) {
            const readCheck = document.getElementById(`read-${circularId}`).checked;
            const understandCheck = document.getElementById(`understand-${circularId}`).checked;
            const implementCheck = document.getElementById(`implement-${circularId}`).checked;
            
            if (!readCheck || !understandCheck || !implementCheck) {
                alert('ÙŠØ±Ø¬Ù‰ Ø§Ù„ØªØ£ÙƒØ¯ Ù…Ù† Ø¬Ù…ÙŠØ¹ Ø®Ø§Ù†Ø§Øª Ø§Ù„ØªØ£ÙƒÙŠØ¯ Ù‚Ø¨Ù„ Ø§Ù„ØªÙˆÙ‚ÙŠØ¹');
                return;
            }
            
            let signatureData = null;
            
            if (signatureMode === 'canvas') {
                const canvas = document.getElementById(`canvas-${circularId}`);
                const ctx = canvas.getContext('2d');
                const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
                
                // Check if canvas has content
                if (!imageData.data.some(pixel => pixel !== 0)) {
                    alert('ÙŠØ±Ø¬Ù‰ Ø¥Ø¶Ø§ÙØ© ØªÙˆÙ‚ÙŠØ¹Ùƒ Ø£ÙˆÙ„Ø§Ù‹');
                    return;
                }
                
                signatureData = {
                    type: 'canvas',
                    data: canvas.toDataURL('image/png')
                };
            } else if (signatureMode === 'text') {
                const textSignature = document.getElementById(`text-signature-${circularId}`).value.trim();
                if (!textSignature) {
                    alert('ÙŠØ±Ø¬Ù‰ ÙƒØªØ§Ø¨Ø© Ø§Ø³Ù…Ùƒ Ù„Ù„ØªÙˆÙ‚ÙŠØ¹ Ø§Ù„Ù†ØµÙŠ');
                    return;
                }
                
                signatureData = {
                    type: 'text',
                    text: textSignature
                };
            } else {
                alert('ÙŠØ±Ø¬Ù‰ Ø§Ø®ØªÙŠØ§Ø± Ø·Ø±ÙŠÙ‚Ø© Ø§Ù„ØªÙˆÙ‚ÙŠØ¹ Ø£ÙˆÙ„Ø§Ù‹');
                return;
            }
            
            // Add signature to circular
            const circular = circulars.find(c => c.id === circularId);
            if (circular) {
                const signature = {
                    teacherId: getCurrentTeacherId(),
                    teacherName: getCurrentTeacherName(),
                    signedAt: new Date().toISOString(),
                    readConfirm: readCheck,
                    understandConfirm: understandCheck,
                    implementConfirm: implementCheck,
                    signature: signatureData
                };
                
                circular.signatures.push(signature);
                saveData();
                
                // Show success message
                showModal('ØªÙ… Ø§Ù„ØªÙˆÙ‚ÙŠØ¹ Ø¨Ù†Ø¬Ø§Ø­!', 'Ø´ÙƒØ±Ø§Ù‹ Ù„Ùƒ Ø¹Ù„Ù‰ ØªØ¹Ø§ÙˆÙ†Ùƒ ÙˆØ§Ù„ØªØ²Ø§Ù…Ùƒ Ø¨Ø§Ù„ØªØ¹Ù„ÙŠÙ…Ø§Øª');
                
                // Update displays
                renderTeacherCirculars();
                if (currentRole === 'admin') {
                    updateDashboard();
                    renderCircularsManagement();
                }
            }
        }

        // Helper functions
