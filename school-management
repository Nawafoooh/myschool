        // Update Dashboard Statistics
        function updateDashboard() {
            document.getElementById('totalCirculars').textContent = circulars.length;
            
            let totalSignatures = 0;
            let completedSignatures = 0;
            
            circulars.forEach(circular => {
                totalSignatures += 15; // Assuming 15 teachers
                completedSignatures += circular.signatures.length;
            });
            
            document.getElementById('pendingSignatures').textContent = totalSignatures - completedSignatures;
            document.getElementById('completedSignatures').textContent = completedSignatures;
        }

