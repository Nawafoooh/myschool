        function exportReport() {
            const reportData = circulars.map(circular => ({
                'Ø±Ù‚Ù… Ø§Ù„ØªØ¹Ù…ÙŠÙ…': circular.number,
                'Ø§Ù„Ù…ÙˆØ¶ÙˆØ¹': circular.subject,
                'ØªØ§Ø±ÙŠØ® Ø§Ù„Ø¥Ù†Ø´Ø§Ø¡': new Date(circular.createdAt).toLocaleDateString('ar-SA'),
                'Ø¹Ø¯Ø¯ Ø§Ù„ØªÙˆÙ‚ÙŠØ¹Ø§Øª': circular.signatures.length,
                'Ù†Ø³Ø¨Ø© Ø§Ù„Ø¥Ù†Ø¬Ø§Ø²': Math.round((circular.signatures.length / 15) * 100) + '%'
            }));
            
            const csv = [
                Object.keys(reportData[0]).join(','),
                ...reportData.map(row => Object.values(row).join(','))
            ].join('\n');
            
            const blob = new Blob(['\uFEFF' + csv], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            const url = URL.createObjectURL(blob);
            link.setAttribute('href', url);
            link.setAttribute('download', `ØªÙ‚Ø±ÙŠØ±_Ø§Ù„ØªØ¹Ø§Ù…ÙŠÙ…_${new Date().toISOString().split('T')[0]}.csv`);
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            showModal('ØªÙ… Ø§Ù„ØªØµØ¯ÙŠØ± Ø¨Ù†Ø¬Ø§Ø­', 'ØªÙ… ØªØ­Ù…ÙŠÙ„ Ù…Ù„Ù Ø§Ù„ØªÙ‚Ø±ÙŠØ± Ø¹Ù„Ù‰ Ø¬Ù‡Ø§Ø²Ùƒ');
        }

        function refreshData() {
