        function viewCircularDetails(circularId) {
            const circular = circulars.find(c => c.id === circularId);
            if (!circular) return;
            
            let signaturesList = '';
            circular.signatures.forEach(sig => {
                signaturesList += `<li>${sig.teacherName} - ${new Date(sig.signedAt).toLocaleString('ar-SA')}</li>`;
            });
            
            showModal(
                `ØªÙØ§ØµÙŠÙ„ Ø§Ù„ØªØ¹Ù…ÙŠÙ… Ø±Ù‚Ù… ${circular.number}`,
                `<div style="text-align: right;">
                    <p><strong>Ø§Ù„Ù…ÙˆØ¶ÙˆØ¹:</strong> ${circular.subject}</p>
                    <p><strong>ØªØ§Ø±ÙŠØ® Ø§Ù„Ø¥Ù†Ø´Ø§Ø¡:</strong> ${new Date(circular.createdAt).toLocaleString('ar-SA')}</p>
                    <p><strong>Ø§Ù„Ù…Ø¬Ù…ÙˆØ¹Ø© Ø§Ù„Ù…Ø³ØªÙ‡Ø¯ÙØ©:</strong> ${circular.targetGroup}</p>
                    <p><strong>Ø¹Ø¯Ø¯ Ø§Ù„ØªÙˆÙ‚ÙŠØ¹Ø§Øª:</strong> ${circular.signatures.length}/15</p>
                    ${signaturesList ? `<p><strong>Ø§Ù„Ù…Ø¹Ù„Ù…ÙˆÙ† Ø§Ù„Ø°ÙŠÙ† ÙˆÙ‚Ø¹ÙˆØ§:</strong></p><ul>${signaturesList}</ul>` : ''}
                </div>`
            );
        }

        function deleteCircular(circularId) {
            if (confirm('Ù‡Ù„ Ø£Ù†Øª Ù…ØªØ£ÙƒØ¯ Ù…Ù† Ø­Ø°Ù Ù‡Ø°Ø§ Ø§Ù„ØªØ¹Ù…ÙŠÙ…ØŸ Ù„Ø§ ÙŠÙ…ÙƒÙ† Ø§Ù„ØªØ±Ø§Ø¬Ø¹ Ø¹Ù† Ù‡Ø°Ø§ Ø§Ù„Ø¥Ø¬Ø±Ø§Ø¡.')) {
